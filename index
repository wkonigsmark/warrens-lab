<body>
  <div class="hero">
    <div class="tty">
      <span id="text"></span>
      <span class="cursor"></span>
    </div>
  </div>

  <script>
    (function () {
      const TEXT = "Burnmark Productions, a Creative Space…";
      const textEl = document.getElementById("text");

      let i = 0;
      const minDelay = 55;
      const maxDelay = 110;

      function randomDelay() {
        return Math.floor(minDelay + Math.random() * (maxDelay - minDelay));
      }

      function type() {
        textEl.textContent = TEXT.slice(0, i++);
        if (i <= TEXT.length) {
          setTimeout(type, randomDelay());
        }
      }

      setTimeout(type, 450);
    })();
  </script>
</body>
